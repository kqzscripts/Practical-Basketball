-- StarterGui > ScreenGui (named KqzlvoHub) > LocalScript

local player = game.Players.LocalPlayer
local gui = script.Parent
local main = gui:WaitForChild("MainFrame")

-- Fancy Title
local title = Instance.new("TextLabel", main)
title.Text = "KqzlvoHub"
title.Font = Enum.Font.Serif
title.TextSize = 36
title.TextColor3 = Color3.fromRGB(255, 215, 0) -- gold color
title.BackgroundTransparency = 1
title.AnchorPoint = Vector2.new(0.5, 0)
title.Position = UDim2.new(0.5, 0, 0, 10)

-- Sprint Toggle
local sprintBtn = Instance.new("TextButton", main)
sprintBtn.Text = "Sprint: OFF"
sprintBtn.Size = UDim2.new(1, -20, 0, 40)
sprintBtn.Position = UDim2.new(0, 10, 0, 70)
sprintBtn.BackgroundColor3 = Color3.fromRGB(30,30,30)
sprintBtn.TextColor3 = Color3.fromRGB(255,255,255)

local sprintEnabled = false
sprintBtn.MouseButton1Click:Connect(function()
    sprintEnabled = not sprintEnabled
    sprintBtn.Text = "Sprint: " .. (sprintEnabled and "ON" or "OFF")
end)

-- Sprint Slider
local sliderFrame = Instance.new("Frame", main)
sliderFrame.Size = UDim2.new(1, -20, 0, 60)
sliderFrame.Position = UDim2.new(0, 10, 0, 130)
sliderFrame.BackgroundTransparency = 1

local sliderLabel = Instance.new("TextLabel", sliderFrame)
sliderLabel.Text = "Sprint Speed"
sliderLabel.Size = UDim2.new(1, 0, 0, 20)
sliderLabel.BackgroundTransparency = 1

local slider = Instance.new("TextButton", sliderFrame)
slider.Size = UDim2.new(0.5, 0, 0, 20)
slider.Position = UDim2.new(0, 0, 0, 30)
slider.Text = "50"
slider.MouseButton1Down:Connect(function()
    -- add slider dragging logic here
end)
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

local sprintSpeed = 30
local walkSpeed = 16
local stamina = 100
local isSprinting = false

game:GetService("UserInputService").InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.LeftShift then
        isSprinting = true
    end
end)

game:GetService("UserInputService").InputEnded:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.LeftShift then
        isSprinting = false
    end
end)

game:GetService("RunService").Heartbeat:Connect(function()
    if isSprinting and stamina > 0 then
        humanoid.WalkSpeed = sprintSpeed
        stamina -= 1
    else
        humanoid.WalkSpeed = walkSpeed
        if stamina < 100 then
            stamina += 0.5
        end
    end
end)
