local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/violin-suzutsuki/LinoriaLib/main/Library.lua"))()
local ThemeManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/violin-suzutsuki/LinoriaLib/main/addons/ThemeManager.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/violin-suzutsuki/LinoriaLib/main/addons/SaveManager.lua"))()

local Window = Library:CreateWindow({
    Title = 'KqzlvoHub | Practical Basketball',
    Center = true,
    AutoShow = true,
    TabPadding = 8,
    MenuFadeTime = 0.2
})

local Tabs = {
    Main = Window:AddTab('Main'),
    Movement = Window:AddTab('Movement'),
    Dribble = Window:AddTab('Dribble'),
    Combat = Window:AddTab('Combat'),
    ['UI Settings'] = Window:AddTab('UI Settings'),
}

local MainGroupBox = Tabs.Main:AddLeftGroupbox('Shooting & Timing')

MainGroupBox:AddToggle('AutoTime', {
    Text = 'Auto Time',
    Default = false,
    Tooltip = 'Automatically times your shot',
    Callback = function(Value)
        print('Auto Time:', Value)
    end
})

MainGroupBox:AddSlider('PerfectTiming', {
    Text = 'Perfect Timing Offset',
    Default = 0,
    Min = -50,
    Max = 50,
    Rounding = 1,
    Compact = false,
})

local MovementGroupBox = Tabs.Movement:AddLeftGroupbox('Movement Mods')

MovementGroupBox:AddToggle('AutoSprint', {
    Text = 'Auto Sprint',
    Default = false,
    Callback = function(Value)
        print('Auto Sprint:', Value)
    end
})

MovementGroupBox:AddToggle('InfStamina', {
    Text = 'Infinite Stamina',
    Default = false,
    Callback = function(Value)
        print('Inf Stamina:', Value)
    end
})

MovementGroupBox:AddToggle('SpeedBoostOnBall', {
    Text = 'Speed Boost (On Ball)',
    Default = false,
    Callback = function(Value)
        print('Speed Boost On Ball:', Value)
    end
})

MovementGroupBox:AddToggle('SpeedBoostOffBall', {
    Text = 'Speed Boost (Off Ball)',
    Default = false,
    Callback = function(Value)
        print('Speed Boost Off Ball:', Value)
    end
})

MovementGroupBox:AddToggle('DisableMoveLock', {
    Text = 'Disable Movement Lock',
    Default = false,
    Tooltip = 'Move after pump fake',
    Callback = function(Value)
        print('Disable Move Lock:', Value)
    end
})

MovementGroupBox:AddToggle('DisableTurnLock', {
    Text = 'Disable Turn Lock',
    Default = false,
    Callback = function(Value)
        print('Disable Turn Lock:', Value)
    end
})

MovementGroupBox:AddToggle('SpinBot', {
    Text = 'Spin Bot',
    Default = false,
    Callback = function(Value)
        print('Spin Bot:', Value)
    end
})

local DribbleGroupBox = Tabs.Dribble:AddLeftGroupbox('Dribbling')

DribbleGroupBox:AddToggle('DribbleMacro', {
    Text = 'Dribble Macro',
    Default = false,
    Callback = function(Value)
        print('Dribble Macro:', Value)
    end
})

DribbleGroupBox:AddToggle('AntiOOB', {
    Text = 'Anti Out of Bounds',
    Default = false,
    Callback = function(Value)
        print('Anti OOB:', Value)
    end
})

DribbleGroupBox:AddSlider('DribbleSpeed', {
    Text = 'Dribble Speed Multiplier',
    Default = 1,
    Min = 1,
    Max = 2,
    Rounding = 2,
    Compact = false,
})

local CombatGroupBox = Tabs.Combat:AddLeftGroupbox('Defense')

CombatGroupBox:AddToggle('AutoGuard', {
    Text = 'Auto Guard',
    Default = false,
    Callback = function(Value)
        print('Auto Guard:', Value)
    end
})

CombatGroupBox:AddToggle('AutoBlock', {
    Text = 'Auto Block',
    Default = false,
    Callback = function(Value)
        print('Auto Block:', Value)
    end
})

CombatGroupBox:AddToggle('AutoSteal', {
    Text = 'Auto Steal',
    Default = false,
    Callback = function(Value)
        print('Auto Steal:', Value)
    end
})

CombatGroupBox:AddToggle('SprintWhileGuarding', {
    Text = 'Sprint While Guarding',
    Default = false,
    Callback = function(Value)
        print('Sprint While Guarding:', Value)
    end
})

Library:SetWatermarkVisibility(true)
Library:SetWatermark('KqzlvoHub | ' .. os.date('%X'))

local MenuGroup = Tabs['UI Settings']:AddLeftGroupbox('Menu')
MenuGroup:AddButton('Unload', function() Library:Unload() end)
MenuGroup:AddLabel('Menu bind'):AddKeyPicker('MenuKeybind', { Default = 'End', NoUserUserTag = true, Text = 'Menu keybind' })

Library.KeybindFrame.Visible = true

ThemeManager:SetLibrary(Library)
SaveManager:SetLibrary(Library)
SaveManager:IgnoreThemeSettings()
SaveManager:SetIgnoreIndexes({ 'MenuKeybind' })
ThemeManager:SetFolder('KqzlvoHub')
SaveManager:SetFolder('KqzlvoHub/PracticalBasketball')
SaveManager:BuildConfigSection(Tabs['UI Settings'])
ThemeManager:ApplyToTab(Tabs['UI Settings'])

Library:Notify('KqzlvoHub Loaded!', 5)
