-- KqzlvoHub v3.0 | Practical Basketball | GUARANTEED TO LOAD
local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local PlayerGui = Player.PlayerGui

print("KqzlvoHub Loading... 1/3")

-- DELETE OLD UI
for _, v in pairs(PlayerGui:GetChildren()) do
    if v.Name == "KqzlvoHub" then v:Destroy() end
end

print("KqzlvoHub Loading... 2/3")

-- MAIN GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "KqzlvoHub"
ScreenGui.Parent = PlayerGui
ScreenGui.ResetOnSpawn = false

print("KqzlvoHub Loading... 3/3")

-- FRAME
local Frame = Instance.new("Frame")
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.new(0.1, 0.1, 0.2)
Frame.Position = UDim2.new(0.05, 0, 0.05, 0)
Frame.Size = UDim2.new(0, 350, 0, 450)
Frame.Active = true
Frame.Draggable = true

-- CORNER
local Corner = Instance.new("UICorner")
Corner.CornerRadius = UDim.new(0, 12)
Corner.Parent = Frame

-- STROKE
local Stroke = Instance.new("UIStroke")
Stroke.Color = Color3.new(0, 0.6, 1)
Stroke.Thickness = 2
Stroke.Parent = Frame

-- TITLE
local Title = Instance.new("TextLabel")
Title.Parent = Frame
Title.BackgroundTransparency = 1
Title.Size = UDim2.new(1, 0, 0, 50)
Title.Text = "‚≠ê KqzlvoHub v3.0 ‚≠ê"
Title.TextColor3 = Color3.new(1, 1, 1)
Title.TextScaled = true
Title.Font = Enum.Font.GothamBold

-- CLOSE
local Close = Instance.new("TextButton")
Close.Parent = Frame
Close.BackgroundColor3 = Color3.new(1, 0.2, 0.2)
Close.Size = UDim2.new(0, 40, 0, 40)
Close.Position = UDim2.new(1, -45, 0, 5)
Close.Text = "X"
Close.TextColor3 = Color3.new(1, 1, 1)
Close.TextScaled = true
Close.Font = Enum.Font.GothamBold

local CloseCorner = Instance.new("UICorner")
CloseCorner.CornerRadius = UDim.new(0, 8)
CloseCorner.Parent = Close

Close.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- SCROLL
local Scroll = Instance.new("ScrollingFrame")
Scroll.Parent = Frame
Scroll.BackgroundTransparency = 1
Scroll.Position = UDim2.new(0, 0, 0, 55)
Scroll.Size = UDim2.new(1, 0, 1, -55)
Scroll.ScrollBarThickness = 6

local Layout = Instance.new("UIListLayout")
Layout.Parent = Scroll
Layout.Padding = UDim.new(0, 5)

-- TOGGLE FUNCTION
local function Toggle(text, callback)
    local Box = Instance.new("Frame")
    Box.Parent = Scroll
    Box.BackgroundColor3 = Color3.new(0.15, 0.15, 0.25)
    Box.Size = UDim2.new(1, -10, 0, 40)
    
    local BoxCorner = Instance.new("UICorner")
    BoxCorner.CornerRadius = UDim.new(0, 8)
    BoxCorner.Parent = Box
    
    local Label = Instance.new("TextLabel")
    Label.Parent = Box
    Label.BackgroundTransparency = 1
    Label.Size = UDim2.new(1, -60, 1, 0)
    Label.Position = UDim2.new(0, 10, 0, 0)
    Label.Text = text
    Label.TextColor3 = Color3.new(1, 1, 1)
    Label.TextScaled = true
    Label.Font = Enum.Font.Gotham
    Label.TextXAlignment = Enum.TextXAlignment.Left
    
    local Btn = Instance.new("TextButton")
    Btn.Parent = Box
    Btn.BackgroundColor3 = Color3.new(0.8, 0.2, 0.2)
    Btn.Size = UDim2.new(0, 50, 0.7, 0)
    Btn.Position = UDim2.new(1, -55, 0.15, 0)
    Btn.Text = "OFF"
    Btn.TextColor3 = Color3.new(1, 1, 1)
    Btn.TextScaled = true
    Btn.Font = Enum.Font.GothamBold
    
    local BtnCorner = Instance.new("UICorner")
    BtnCorner.CornerRadius = UDim.new(0, 6)
    BtnCorner.Parent = Btn
    
    local enabled = false
    Btn.MouseButton1Click:Connect(function()
        enabled = not enabled
        Btn.BackgroundColor3 = enabled and Color3.new(0.2, 0.8, 0.2) or Color3.new(0.8, 0.2, 0.2)
        Btn.Text = enabled and "ON" or "OFF"
        callback(enabled)
    end)
end

-- CREATE TOGGLES
Toggle("üöÄ Speed Hack", function(on)
    if on then
        spawn(function()
            while Player.Character and Player.Character:FindFirstChild("Humanoid") do
                Player.Character.Humanoid.WalkSpeed = 50
                wait()
            end
        end)
    end
end)

Toggle("üí® Auto Sprint", function(on)
    if on then
        spawn(function()
            while Player.Character and Player.Character:FindFirstChild("Humanoid") do
                Player.Character.Humanoid:ChangeState(8)
                wait()
            end
        end)
    end
end)

Toggle("üõ°Ô∏è No Fall", function(on)
    if on then
        spawn(function()
            while Player.Character do
                if Player.Character:FindFirstChild("Humanoid") then
                    Player.Character.Humanoid.PlatformStand = true
                end
                wait(0.1)
            end
        end)
    end
end)

Toggle("üåü Fly", function(on)
    local BodyVelocity = nil
    if on then
        local char = Player.Character
        if char and char:FindFirstChild("HumanoidRootPart") then
            BodyVelocity = Instance.new("BodyVelocity")
            BodyVelocity.MaxForce = Vector3.new(4000, 4000, 4000)
            BodyVelocity.Velocity = Vector3.new(0, 0, 0)
            BodyVelocity.Parent = char.HumanoidRootPart
            
            spawn(function()
                while BodyVelocity do
                    BodyVelocity.Velocity = Player:GetMouse().Hit.Position + Vector3.new(0, 10, 0)
                    wait()
                end
            end)
        end
    else
        if BodyVelocity then BodyVelocity:Destroy() end
    end
end)

Toggle("üî• Anti OOB", function(on)
    if on then
        spawn(function()
            while wait(0.1) do
                local char = Player.Character
                if char and char:FindFirstChild("HumanoidRootPart") then
                    if char.HumanoidRootPart.Position.Y < -50 then
                        char.HumanoidRootPart.CFrame = CFrame.new(0, 20, 0)
                    end
                end
            end
        end)
    end
end)

-- UPDATE SCROLL SIZE
Layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
    Scroll.CanvasSize = UDim2.new(0, 0, 0, Layout.AbsoluteContentSize.Y)
end)

-- NOTIFICATION
game.StarterGui:SetCore("SendNotification", {
    Title = "KqzlvoHub";
    Text = "v3.0 LOADED! Drag UI around!";
    Duration = 4
})

print("‚≠ê KqzlvoHub v3.0 LOADED SUCCESSFULLY ‚≠ê")
